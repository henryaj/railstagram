%h1 Welcome to Railstagram!

- unless user_signed_in?
  = link_to "Sign up", new_user_registration_path
  = link_to "Log in", new_user_session_path
- else
  = link_to "Sign out", destroy_user_session_path, method: :delete

- if user_signed_in?
  = link_to "Post image", new_post_path

%posts
  
  - @posts.each do |post|
    %ul
      %li
        = filepicker_image_tag post.filepicker_url, w: 160, h: 160, fit: 'clip'
      %li
        = post.caption