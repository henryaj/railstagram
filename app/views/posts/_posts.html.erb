<% @posts.reverse.each do |post| %>
    <div class="row well">
      <div class="col-md-9">
      <div width="480px">
        <center><dl>
          <dd>
            <a id="modal<%= post.id %>" data-toggle="modal" data-target="#<%= post.id %>">
              <%= filepicker_image_tag post.filepicker_url, w: 450, h: 450, fit: 'clip' %>
            </a>
          </dd>
        </dl></center>
      </div>
      </div>
      <div class="col-md-3">
      <dl>
      <dd><h3><%= post.caption %></h3>
      </dd>
      <dd><h5><%= time_ago_in_words(post.created_at) %> ago</h5></dd>
      <dd>
            <h4><%= link_to post.username, user_path(post.user_id) %></h4>
          </dd>
          <dd>
          <% if post.tags.any? %>
            <h5><% post.tags.each do |tag| %>
              #<%= tag %>  
            <% end %></h5>
            <% end %>
          </dd>
      </dl>
      </div>
    </div>
    <% end %>