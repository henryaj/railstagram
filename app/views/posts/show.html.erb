<center>
  <a href="<%= @post.filepicker_url %>"><%= filepicker_image_tag @post.filepicker_url, w: 500, h: 500, fit: 'clip' %></a>
  <h4><%= @post.caption %></h4>
  <h5>Posted by <%= link_to @post.username, user_path(@post.user_id) %> on <%= @post.created_at.strftime("%F") %></h5>
</center>
  <br />
  <% if user_signed_in? %>
  <center>
    <%= render "stripe" %>
  </center>
  <% end %>
  <br />
  <comments>
            <% @post.comments.each do |comment| %>
              <div class="well" id="<%= @post.id %>"><strong>@<%= comment.username %></strong> – <%= comment.text %>
              <% if user_signed_in? %>
              <div class="pull-right"><strong><span id="heart_count<%= comment.id %>"><%= comment.hearts.count %></span></strong> <%= link_to "♥", new_post_comment_heart_path(@post.id, comment.id), class: "heart", id: comment.id %></div>
              <% end %></div>
            <% end %>
          </comments>
  <br />
  <div class="input-group">
    <input id="comment" type="text" class="form-control">
    <span class="input-group-btn">
      <button class="btn btn-default" type="button">Post comment</button>
    </span>
  </div>
