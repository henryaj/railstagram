<center>
  <a href="<%= @post.filepicker_url %>"><%= filepicker_image_tag @post.filepicker_url, w: 500, h: 500, fit: 'clip' %></a>
  <h4><%= @post.caption %></h4>
  <h5>Posted by <%= @post.username %> on <%= @post.created_at.strftime("%F") %></h5>
</center>
  <br />
  <% @post.comments.each do |comment| %>
  <div class="well"><%= comment %></div>
  <% end %>
  <br />
  <div class="input-group">
    <input id="comment" type="text" class="form-control">
    <span class="input-group-btn">
      <button class="btn btn-default" type="button">Post comment</button>
    </span>
  </div>
